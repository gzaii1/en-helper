{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "node",
    "removeComments": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@type/*": ["types/*"]
    },
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "typeRoots": ["types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.d.ts"]
}
